# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Web files
[*.{html,css,js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows files
[*.{cmd,bat}]
end_of_line = crlf

# Matches package.json
[package.json]
indent_style = space
indent_size = 2

# Ignore minified files
[**.min.*]
indent_style = ignore
insert_final_newline = ignore
